<section class="container">
    <section class="d-flex justify-content-between">
        <h2>Filmes Disponíveis</h2>
        <a href="/filme/create" class="btn btn-primary">Cadastrar Novo Filme</a>
    </section>
</section>

<hr/>

<section class="my-4 container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>titulo</th>
                <th>Gênero</th>
                <th>Duração</th>
                <th>Classificação</th>
                <th>ação</th>
            </tr>
        </thead>
        <tbody>
            {{!-- O each é um recurso do Handlebars que permite que tags sejam repetidas, ele funciona como uma estrutura de repetição --}}
            {{#each dados}}
            <tr>
                <td>{{dataValues.id}}</td>
                <td>{{dataValues.titulo}}</td>
                <td>{{dataValues.genero}}</td>
                <td>{{dataValues.duracao}}</td>
                <td>{{dataValues.classificacao}}</td>
                <td>
                    <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal{{dataValues.id}}">Excluir</a>
                </td>
            </tr>
            {{>modalDelete idItem = dataValues.id}}
            {{/each}}
        </tbody>
    </table>
</section>